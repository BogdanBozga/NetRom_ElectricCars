				</ul>
			</div> <!-- .timeline -->

			<div class="events">
				<ul class="wrap">
					@{
						DateTime currentTime = DateTime.Now;
					}


					@for(int i = 0; i < 7; i++)
					{

							<li class="events-group">
								<div class="top-info"><span>@currentTime.Date.AddDays(i).ToString("dddd, dd MMMM yyyy")</span></div>
								@foreach (StartEndTime seTime in Model.bookedTimes)
								{
									@if (seTime.startTime.Date.ToString("dd/MM/yyyy") == currentTime.AddDays(i).ToString("dd/MM/yyyy"))
									{
										<script>alert(@seTime.startTime.ToString("HH:mm")+"  "+ @seTime.endTime.ToString("HH:mm"))</script>
										<ul>
											<li class="single-event" data-start=@seTime.startTime.ToString("HH:mm"); data-end=@seTime.endTime.ToString("HH:mm");  data-content="event-yoga-1" data-event="event-1">
												<a href="#0">
													<em class="event-name">Already Booked</em>
												</a>
											</li>
										</ul>
									}
								}
							</li>
					}
				</ul>


			<div class="event-modal">
				<header class="header">
					<div class="content">
						<span class="event-date"></span>
						<h3 class="event-name"></h3>
					</div>

					<div class="header-bg"></div>
				</header>

				<div class="body">
					<div class="event-info"></div>
					<div class="body-bg"></div>
				</div>

				<a href="#0" class="close">Close</a>
			</div>

			<div class="cover-layer"></div>
		</div> <!-- .cd-schedule -->










		</div>
	</div>
</div>
