@model BookingAndTimes
<link href="~/css/calendar.css" rel="stylesheet"/>
@section scripts {
	<script type="text/javascript" src="~/js/calendar.js"></script>
}
<div class="row">
	<div class="column">
		<div class="col-md-4">
			<form asp-action="SaveBooking" method="post">
				<div>
					<div class="form-group">
						<label asp-for="@Model.CarNumber" class="control-label">Car Number</label>
						<input asp-for="@Model.CarNumber" class="form-control" required=true/>
						<span asp-validation-for="@Model.CarNumber" class="text-danger"></span>
					</div>
					<div class="form-group">

						<label asp-for="@Model.StartDate" class="control-label">Start Date and Time</label>
						<input asp-for="@Model.StartDate" class="form-control" type="datetime-local" required=true/>
						<span asp-validation-for="@Model.StartDate" class="text-danger"></span>
					</div>
					<div class="form-group">

						<label asp-for="@Model.EndDate" class="control-label">End Date And Time</label>
						<input asp-for="@Model.EndDate" class="form-control" type="datetime-local" required=true/>
						<span asp-validation-for="@Model.EndDate" class="text-danger"></span>
					</div>
					<div>
						<input asp-for="@Model.PlugId" hidden />
					</div>					
					@*
						public Guid? UserId { get; set; }
						This need to be implemeted if we make users
					*@
					<div class="form-group">
						<input type="submit" value="Save Booking" class="btn btn-primary" />
					</div>
				</div>
			</form>
		</div>
		<div> <br/><br/>
			<a asp-action="Index" asp-controller="RechargingStation" style="color:#FF8800;"><b>Back to details page</b> </a>
		</div>
	</div>

	<div class="column">
		<div class="cd-schedule loading">
